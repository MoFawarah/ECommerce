@model OnlineStore.Models.product
@{
    ViewBag.Title = "ProductDetails";
}




<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>See more Details</p>
                    <h1>Single Product</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- single product -->



<div class="single-product mt-150 mb-150">
    <div class="container">




        <div class="row">
            <div class="col-md-5">
                <div class="single-product-img">
                    <img src="~/Content/assets/img/products/@Model.image_url" alt="">
                </div>
            </div>
            <div class="col-md-7">
                <div class="single-product-content">
                    <h3>@Model.name</h3>
                    <p class="single-product-pricing"><span>Per piece</span> @Model.price</p>
                    <p>@Model.discription</p>
                    <div class="single-product-form">
                        @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                        {
                            <input type="hidden" name="id" value="@Model.id" />
                            <input type="number" name="quantity" placeholder="0" class="form-control" min="1" value="1" />
                            <button type="submit" class="cart-btn">
                                <i class="fas fa-shopping-cart"></i> Add To Cart
                            </button>
                        }

                    </div>

                        @{
                            string categoryName;
                            var categoryID = Model.category_id;
                            if (categoryID == 1)
                            {
                                categoryName = "Vegetables";
                            }
                            else if (categoryID == 2)
                            {
                                categoryName = "Fruits";
                            }
                            else
                            {
                                categoryName = "Bread";

                            }

                        }
                        <p><strong>Categories: </strong>@categoryName</p>
                    
                    <h4>Share:</h4>
                    <ul class="product-share">
                        <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href=""><i class="fab fa-twitter"></i></a></li>
                        <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>


<!-- end single product -->